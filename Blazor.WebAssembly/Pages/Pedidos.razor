@page "/pedidos"
@attribute [Authorize]
@inject HttpClient Http

<PageTitle>Mis Pedidos</PageTitle>

<h1>Historial de Pedidos</h1>

<AuthorizeView>
    <Authorized>
        @if (context.User.IsInRole("Admin"))
        {
            <VistaAdmin />
        }
        else
        {
            <VistaUsuario />
        }
    </Authorized>
</AuthorizeView>

